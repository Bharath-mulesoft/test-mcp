#%RAML 1.0
title: Order API
version: v1
baseUri: https://api.example.com/{version}
mediaType: application/json

types:
  Order:
    type: object
    properties:
      id?: integer
      customerName: string
      totalAmount: number
      status: string
      createdAt?: datetime

traits:
  errorResponses:
    responses:
      400:
        body:
          application/json:
            example: { "error": "Bad request" }
      404:
        body:
          application/json:
            example: { "error": "Not found" }

/orders:
  description: Collection of orders

  post:
    description: Create a new order
    is: [ errorResponses ]
    body:
      application/json:
        type: Order
        example:
          { "customerName": "Alice", "totalAmount": 250.75, "status": "Pending" }
    responses:
      201:
        body:
          application/json:
            type: Order
            example:
              { "id": 501, "customerName": "Alice", "totalAmount": 250.75, "status": "Pending", "createdAt": "2025-09-02T11:00:00Z" }

  /{orderId}:
    uriParameters:
      orderId:
        type: integer
        description: Unique identifier of the order

    get:
      description: Retrieve an order by ID
      is: [ errorResponses ]
      responses:
        200:
          body:
            application/json:
              type: Order
              example:
                { "id": 501, "customerName": "Alice", "totalAmount": 250.75, "status": "Pending", "createdAt": "2025-09-02T11:00:00Z" }
