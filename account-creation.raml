#%RAML 1.0
title: Account API
version: v1
baseUri: https://api.example.com/{version}
mediaType: application/json

types:
  Account:
    type: object
    properties:
      id?: integer
      name: string
      email: string
      createdAt?: datetime

traits:
  errorResponses:
    responses:
      400:
        body:
          application/json:
            example: { "error": "Bad request" }
      404:
        body:
          application/json:
            example: { "error": "Not found" }

/accounts:
  description: Collection of accounts

  post:
    description: Create a new account
    is: [ errorResponses ]
    body:
      application/json:
        type: Account
        example:
          { "name": "John Doe", "email": "john.doe@example.com" }
    responses:
      201:
        body:
          application/json:
            type: Account
            example:
              { "id": 101, "name": "John Doe", "email": "john.doe@example.com", "createdAt": "2025-09-02T10:00:00Z" }

  /{accountId}:
    uriParameters:
      accountId:
        type: integer
        description: Unique identifier of the account

    get:
      description: Retrieve a single account by ID
      is: [ errorResponses ]
      responses:
        200:
          body:
            application/json:
              type: Account
              example:
                { "id": 101, "name": "John Doe", "email": "john.doe@example.com", "createdAt": "2025-09-02T10:00:00Z" }
